<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_gradient_bg"

    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Personal Details"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_horizontal"
            android:shadowColor="#55000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="4"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="5dp" />

        <!-- First Name Input -->
        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:background="@drawable/stylish_edittext"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#BBBBBB"
            android:layout_marginBottom="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Middle Name"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="5dp" />
        <!-- Middle Name Input -->
        <EditText
            android:id="@+id/middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Middle Name"
            android:background="@drawable/stylish_edittext"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#BBBBBB"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="5dp" />
        <!-- Last Name Input -->
        <EditText
            android:id="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:background="@drawable/stylish_edittext"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#BBBBBB"
            android:layout_marginBottom="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="5dp" />

        <!-- Age Input -->
        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:inputType="number"
            android:background="@drawable/stylish_edittext"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#BBBBBB"
            android:layout_marginBottom="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="5dp" />

        <!-- Country Input -->
        <EditText
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Country"
            android:background="@drawable/stylish_edittext"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#BBBBBB"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="5dp" />
        <!-- City Input -->
        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:background="@drawable/stylish_edittext"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#BBBBBB"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anonymous Name"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="5dp" />


        <!-- Anonymous Name Input -->
        <EditText
            android:id="@+id/anonymous_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Anonymous Name"
            android:background="@drawable/stylish_edittext"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#BBBBBB"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Postal Code"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="5dp" />
        <!-- Postal Code Input -->
        <EditText
            android:id="@+id/postal_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Postal Code"
            android:background="@drawable/stylish_edittext"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#BBBBBB"
            android:layout_marginBottom="15dp" />

        <!-- Email Input (Hidden) -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:visibility="gone"
            android:background="@drawable/stylish_edittext"
            android:padding="12dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/add_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_button_background"
            android:text="Add User"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/update_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_button_background"
            android:visibility="gone"
            android:text="Update User"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/delete_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_button_background"
            android:text="Delete User"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_marginBottom="15dp" />

        <!-- User List -->
        <TextView
            android:id="@+id/user_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="User List"
            android:textColor="#FFFFFF"
            android:paddingTop="16dp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
