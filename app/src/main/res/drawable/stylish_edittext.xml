<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient for the EditText background -->
    <gradient
        android:startColor="#F3E5F5"
    android:centerColor="#CE93D8"
    android:endColor="#AB47BC"
    android:angle="135" />

    <!-- Padding for inner spacing -->
    <padding
        android:top="10dp"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp" />

    <!-- Border styling -->
    <stroke
        android:width="3dp"
        android:color="#7B1FA2" /> <!-- Deep purple border -->


</shape>
